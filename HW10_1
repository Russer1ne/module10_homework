x = prompt('Введите число что бы узнать четное оно или нет');
let type; //переменная для хранения типа переменной х
x = +x; // после эотй операции любое нечисловое значение как я заметил превращается в NaN
type = typeof(x);
/* следовательно на мой взгляд не имеет смысла делать проверку по типу данных,
т.к. если там число, то сразу можно проверять его на четность, а если там что либо другое
оно превратится в NaN. по этому я сделал проверку такой: */

if (isNaN(x)) {
  console.log("Упс, вы ошиблись, введите число")
} else {
  if (x%2 === 0){
    console.log(x + " четное число")
  } else {
    console.log(x + " не четное число")
  }
  
}
